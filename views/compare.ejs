    <link rel="shortcut icon" href="/assets/Capture.PNG">
</head>
<body>
    <section class="container">
        <header>
            <div class="brandlogo">

            </div>
            <ul>
                <li>
                    <a href="./index.ejs">Working</a>
                </li>
                <li>
                    <a href="./index.ejs">About</a>
                </li>
                <li>
                    <a href="#con">Contact</a>
                </li>
                
                <li>
                    <a href="https://github.com/NITHwebElites/newhack">Github</a>
                </li>
            
            </ul>
        </header>
        <div class="main">
        <input placeholder="Medicine Name Here" type="text">
        
    </div>
    <div class="product-container">
        <%if(params[0] === undefined){%>
            <p>No data found</p>
        <%}%>
        <%params.forEach(function(med){%>
            <div class="product_card">
                <h3 class="product_name"><%= name %></h3>
            
            <div class="product_img">
                <img src=<%=med.image_URL%> alt="">
            </div>
            <div class="product_details">
                <h3 class="company"> <%=med.company%></h3>
                <h3 class="price">
                   <%="₹ "+med.price%>
                </h3>
                <a class="redirect button" href = <%=med.product_URL%>><i class="fas fa-external-link-alt"></i> &nbsp;Visit</a> 
            </div>
    </div> 
        <%})%>
        
        
    </div>
    </section>
    <footer>
        <section class="contact">
            <div class="contact_details">
                <form method = "post" action = "/message">
                <h2>Feel Free to Contact Us</h2> 
                <input placeholder="Enter Message Here" type="text" name = "message">
                <br><button type = "submit">SEND</button> 
            </form>
            </div>
           
        </section>
        <h3>Proudly Using data From</h3>
        <div class="mnc-container">
            <div class="mnc"></div>
            <div class="mnc"></div>
            <div class="mnc"></div>
            <div class="mnc"></div>
            
        </div>
        <p>© MedBazzar 2021 | MIT License | Some Rights Reserved</p>
    </footer>
